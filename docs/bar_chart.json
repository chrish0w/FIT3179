{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Home Buyer Loan Commitments by State",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/new_fhome_buyer_loan.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "select",
        "options": [
          "2006", "2007", "2008", "2009", "2010", "2011", "2012", 
          "2013", "2014", "2015", "2016", "2017", "2018", "2019", 
          "2020", "2021", "2022", "2023", "2024"
        ],
        "name": "Select Year: "
      },
      "value": "2016"
    },
    {
      "name": "month_selection",
      "bind": {
        "input": "select",
        "options": [
          "Jan", "Feb", "Mar", "Apr", "May", "Jun", 
          "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"
        ],
        "name": "Select Month: "
      },
      "value": "May"
    }
  ],
  "transform": [
    {
      "filter": "(datum.Year == year_selection) && (datum.Month == month_selection)"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "axis": { "title": "State", "labelAngle": -45 }
    },
    "y": {
      "aggregate": "sum",
      "field": "Loan_Commitments",
      "type": "quantitative",
      "axis": { "title": "Total Loan Commitments" }
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "legend": { "title": "State" }
    },
    "tooltip": [
      { "field": "State", "type": "nominal", "title": "State" },
      {
        "field": "Loan_Commitments",
        "type": "quantitative",
        "title": "Loan Commitments"
      }
    ]
  }
}
