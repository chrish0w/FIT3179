{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Home Buyer Loan Commitments by State",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/new_fhome_buyer_loan.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "range",
        "min": 2007,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      },
      "value": 2016
    },
    {
      "name": "month_selection",
      "bind": {
        "input": "select",
        "options": [
          "Jan", "Feb", "Mar", "Apr", "May", "Jun", 
          "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"
        ],
        "name": "Select Month: "
      },
      "value": "May"
    }
  ],
  "transform": [
    {
      "filter": "(datum.Year == year_selection) && (datum.Month == month_selection)"
    },
    {
      "filter": "(year_selection != 2024) || (month_selection != 'Sep' && month_selection != 'Oct' && month_selection != 'Nov' && month_selection != 'Dec')"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "axis": { "title": "State", "labelAngle": -45 },
      "sort": "-y"  
    },
    "y": {
      "aggregate": "sum",
      "field": "Loan_Commitments",
      "type": "quantitative",
      "axis": { "title": "Total Loan Commitments" }
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "scale": {
        "domain": [
          "New South Wales", "Victoria", "Queensland", "South Australia",
          "Western Australia", "Tasmania", "Northern Territory", "Australian Capital Territory"
        ],
        "range": [
          "#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd",
          "#8c564b", "#e377c2", "#7f7f7f"
        ]
      },
      "legend": null  
    },
    "tooltip": [
      { "field": "State", "type": "nominal", "title": "State" },
      {
        "field": "Loan_Commitments",
        "type": "quantitative",
        "title": "Loan Commitments"
      }
    ]
  }
}
