{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "title": {"text": {"signal": "'Home Buyer Loan Commitments (Year: ' + Year_selection"}},
  "params": [
    {
      "name": "Year_selection",
      "value": 2006,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/ne_50m_admin_1_states_provinces.json",
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/aggregated_by_year.csv",
          "format": {"type": "csv"}
        },
        "key": "State",
        "fields": ["Loan_Commitments", "Year"]
      }
    },
    {
      "filter": "datum.Year == Year_selection"  
    },
    {
      "joinaggregate": [{
        "op": "sum", 
        "field": "Loan_Commitments", 
        "as": "Total_Loan_Commitments"
      }],
      "groupby": ["properties.name"]
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeWidth": 2
      },
      "encoding": {
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "Total_Loan_Commitments", "type": "quantitative", "title": "Loan Commitments"}
        ]
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 2
      },
      "encoding": {
        "color": {
          "field": "Total_Loan_Commitments",
          "type": "quantitative",
          "scale": { "scheme": "reds" }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          { "field": "Total_Loan_Commitments", "type": "quantitative", "title": "Loan Commitments" }
        ]
      }
    }
  ],
  "projection": {
    "type": "mercator"
  }
}
