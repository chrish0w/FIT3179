{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/aggregated_by_year.csv",
    "format": {"type": "csv"}
  },
  "title": "State-Level Housing Loan Trends Over Time",
  "width": 800,
  "height": 500,
  "transform": [
    {
      "filter": "datum.State != null && datum.State != '' && datum.State != 'undefined'" 
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
        "title": "Year",
        "labelAngle": -45  
      }
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "scale": {
        "domain": [
          "New South Wales", "Victoria", "Queensland", "South Australia",
          "Western Australia", "Tasmania", "Northern Territory", "Australian Capital Territory"
        ],
        "range": [
          "#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd",
          "#8c564b", "#e377c2", "#7f7f7f"
        ]
      },
      "legend": {"title": "State"}
    }
  },
  "layer": [
    {
      "encoding": {
        "y": {
          "field": "Loan_Commitments",
          "type": "quantitative",
          "axis": {"title": "Total Housing Loans Issued"}
        }
      },
      "layer": [
        {"mark": {"type": "line", "clip": true}},
        {"transform": [{"filter": {"selection": "hover"}}], "mark": "point"}
      ]
    },
    {
      "transform": [
        {
          "pivot": "State",
          "value": "Loan_Commitments",
          "groupby": ["Year"]
        }
      ],
      "mark": {"type": "rule", "clip": true},
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "selection": "hover"},
          "value": 0
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "New South Wales", "type": "quantitative"},
          {"field": "Victoria", "type": "quantitative"},
          {"field": "Queensland", "type": "quantitative"},
          {"field": "South Australia", "type": "quantitative"},
          {"field": "Western Australia", "type": "quantitative"},
          {"field": "Tasmania", "type": "quantitative"},
          {"field": "Northern Territory", "type": "quantitative"},
          {"field": "Australian Capital Territory", "type": "quantitative"}
        ]
      },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["Year"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ]
}
