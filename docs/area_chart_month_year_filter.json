{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/updated_loan_commitments_yyyy_mm.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "State_selection",
      "value": "New South Wales",
      "bind": {
        "input": "select",
        "options": [
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ],
        "name": "Select State: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 480,
      "mark": "area",
      "transform": [
        {"filter": "datum.State == State_selection"}
      ],
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "axis": {"title": "Date (Month-Year)"}
        },
        "y": {
          "field": "Loan_Commitments",
          "type": "quantitative",
          "aggregate": "sum",
          "axis": {"title": "Loan Commitments"}
        },
        "color": {"field": "State", "type": "nominal"}
      }
    },
    {
      "width": 480,
      "height": 60,
      "mark": "area",
      "params": [
        {
          "name": "brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "transform": [
        {"filter": "datum.State == State_selection"}
      ],
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "axis": {"title": "Year"}
        },
        "y": {
          "field": "Loan_Commitments",
          "type": "quantitative",
          "aggregate": "sum",
          "axis": {"tickCount": 3, "grid": false}
        },
        "color": {"field": "State", "type": "nominal"}
      }
    }
  ]
}
