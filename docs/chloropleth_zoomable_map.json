{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Home Buyer Loan Commitments Across Australian States",
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": [134, -25],  
    "scale": 3000          
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/ne_50m_admin_1_states_provinces.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "properties.name", "title": "State"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/aggregated_by_year.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/chrish0w/FIT3179/refs/heads/main/docs/ne_50m_admin_1_states_provinces.json",
              "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Loan_Commitments",
          "type": "quantitative",
          "scale": {"domain": [0, 50000], "scheme": "reds"},
          "legend": {"format": ".2s", "title": "Loan Commitments"}
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Loan_Commitments", "type": "quantitative", "title": "Loan Commitments"},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ],
  "config": {}
}
