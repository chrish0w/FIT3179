{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Generalized Cost of Living Across Australian States",
  "data": {
    "url": "ne_50m_admin_1_states_provinces.json",
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "generalized_cost_of_living.csv"
        },
        "key": "State",
        "fields": ["Generalized_Cost_of_Living"]
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Generalized_Cost_of_Living",
      "type": "quantitative",
      "scale": {
        "scheme": "blues"
      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Generalized_Cost_of_Living", "type": "quantitative"}
    ]
  }
}
