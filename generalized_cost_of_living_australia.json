{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "title": "Generalized Cost of Living Index Across Australian States",
  "data": {
    "url": "ne_50m_admin_1_states_provinces.json",
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_1_states_provinces"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",    
        "strokeWidth": 2     
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "generalized_cost_of_living.csv"
            },
            "key": "State",
            "fields": ["Generalized_Cost_of_Living"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",   
        "strokeWidth": 2     
      },
      "encoding": {
        "color": {
          "field": "Generalized_Cost_of_Living",
          "type": "quantitative",
          "scale": {
            "scheme": "blues",
            "domain": [0, 1]
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {
            "field": "Generalized_Cost_of_Living",
            "type": "quantitative",
            "title": "Generalized Cost of Living",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "projection": {
    "type": "mercator"
  }
}
